# Customer.IO API Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Customer.IO Data Pipelines API Key
# Get this from your Customer.IO workspace settings
CUSTOMERIO_API_KEY=your_api_key_here

# Customer.IO Region (us or eu)
# Default: us
CUSTOMERIO_REGION=us

# Test Environment Configuration
# Used to namespace test data and avoid conflicts
TEST_ENVIRONMENT=test

# Integration Test Settings
# Set to false to require credentials for all tests
SKIP_IF_NO_CREDENTIALS=true

# Enable debug logging for integration tests
DEBUG_INTEGRATION_TESTS=false

# Rate limiting for tests (requests per second)
TEST_RATE_LIMIT_PER_SECOND=10

# Test data retention (hours)
TEST_DATA_RETENTION_HOURS=24

# Customer.IO App API Bearer Token
# Get this from Customer.IO UI: Settings > API Credentials > App API Keys
CUSTOMERIO_APP_API_TOKEN=your_app_api_token_here

# Test Data Mode Configuration
# "existing" - Use existing test data (no creation/deletion) - RECOMMENDED
# "create" - Create new test data for each run (can accumulate data)
# "hybrid" - Use existing for read operations, create only when necessary
TEST_DATA_MODE=existing

# Existing Test Data IDs (for "existing" or "hybrid" mode)
# These should be IDs of test data that already exists in your Customer.IO workspace
TEST_EXISTING_CUSTOMER_ID=test_customer_123
TEST_EXISTING_EMAIL=test@example.com
TEST_EXISTING_DEVICE_TOKEN=existing_device_token
TEST_EXISTING_TRANSACTIONAL_MESSAGE_ID=12345
TEST_EXISTING_BROADCAST_ID=67890

# Show cleanup report after test run
SHOW_CLEANUP_REPORT=true